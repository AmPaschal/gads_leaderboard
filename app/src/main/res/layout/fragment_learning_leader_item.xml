<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="20dp"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/image_learning_leader"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="30dp"
        android:src="@drawable/icon_learning_leaders" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/image_learning_leader"
        android:layout_centerVertical="true"
        android:layout_marginStart="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_learner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image_learning_leader"
            android:fontFamily="@font/roboto_bold"
            android:text="Amusuo Paschal"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_learner_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@id/image_learning_leader"
            android:fontFamily="@font/raleway"
            android:text="Amusuo Paschal"
            android:textSize="12sp" />

    </LinearLayout>

</RelativeLayout>
